package {	   import flash.display.Sprite;   import flash.events.Event;   import flash.system.System;   import flash.text.TextField;   import flash.utils.Timer;      public class FPS extends Sprite   {      private var counter:uint;      private var counterDisplay:TextField;           public function FPS(xPos:Number=15, yPos:Number=15, whiteBG:Boolean=false)      {         		 counter=0;         counterDisplay = new TextField();         counterDisplay.background = whiteBG;		 counterDisplay.textColor = 0xFFFFFF;         counterDisplay.height = 20;		 counterDisplay.width = 60;         addChild(counterDisplay);         addEventListener(Event.ENTER_FRAME, onEnterFrameEvent);                  var theTimer:Timer = new Timer(1000, 0);         theTimer.addEventListener('timer',onTimerEvent);         theTimer.start();		          x=xPos;		 y=yPos;      }            private function onEnterFrameEvent(event:Event):void      {         counter++;      }      private function onTimerEvent(event:Event):void      {         counterDisplay.text='FPS : '+ counter.toFixed(1);//+ '\n Memory : '+(System.totalMemory/1024);         counter=0;      }   }}